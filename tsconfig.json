{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": ["./src", "./__tests__"],

    "resolveJsonModule": true,

    "allowJs": true,

    "outDir": "./dist",

    "isolatedModules": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./__tests__/**/*.ts"]
}
